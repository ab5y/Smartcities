{% extends "layout.jinja2" %}

{% block content %}
<div class="container">
	<div class="row">
		
	</div> <!-- row -->
	<div class="row">
		<div id="carouselDiv" class="carousel slide" data-ride="carousel">
			<!-- indicators -->
			<ol class="carousel-indicators">
				<li data-target="carouselDiv" data-slide-to="0" class="active"></li>
				<li data-target="carouselDiv" data-slide-to="1"></li>
				<li data-target="carouselDiv" data-slide-to="2"></li>
				<li data-target="carouselDiv" data-slide-to="3"></li>
			</ol>

			<!-- wrapper for slides -->
			<div class="carousel-inner">
				<div class="carousel-item active">
					<a href="{{'cities'|route_url}}">
						<img class="d-block w-100" src="{{request.static_url('server:static/cities.jpg')}}" alt="Cities">
					</a>
				</div>

				<div class="carousel-item">
					<img class="d-block w-100" src="{{request.static_url('server:static/projects.jpg')}}" alt="Projects">
				</div>

				<div class="carousel-item">
					<img class="d-block w-100" src="{{request.static_url('server:static/finance.jpg')}}" alt="Finance">
				</div>

				<div class="carousel-item">
					<img class="d-block w-100" src="{{request.static_url('server:static/governance.jpg')}}" alt="Governance">
				</div>
			</div>

			<!-- Left and right controls -->
			<a class="carousel-control-prev" href="#carouselDiv" role="button" data-slide="prev">
				<span class="carousel-control-prev-icon" aria-hidden="true"></span>
				<span class="sr-only">Previous</span>
			</a>
			<a class="carousel-control-next" href="#carouselDiv" role="button" data-slide="next">
				<span class="carousel-control-next-icon" aria-hidden="true"></span>
				<span class="sr-only">Next</span>
			</a>
		</div>
	</div> <!-- row -->
</div>
{% endblock content %}
